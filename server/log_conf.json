{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "verbose": {
            "format": "%(asctime)s - %(name)s - %(filename)s - %(lineno)d - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "file": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "verbose",
            "filename": "./logs/django.log"
        }
    },
    "loggers": {
        "gunicorn.error": {
            "level": "INFO",
            "handlers": [
                "file"
            ]
        },
        "gunicorn.access": {
            "level": "INFO",
            "handlers": [
                "file"
            ]
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": [
            "file"
        ]
    }
}